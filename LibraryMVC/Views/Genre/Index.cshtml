@model IEnumerable<LibraryMVC.Dtos.Genres.GenreDto>

@{
    ViewData["Title"] = "Genres";
}

<h2>Genres</h2>

<a href="@Url.Action("Create", "Genre")" class="btn btn-primary">Create Genre</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Name</td>
            </tr>
        }
    </tbody>
</table>
