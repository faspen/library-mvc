@model IEnumerable<LibraryMVC.Dtos.Authors.AuthorDto>

@{
    ViewData["Title"] = "Authors";
}

<h2>Authors</h2>

<a href="@Url.Action("Create", "Author")" class="btn btn-primary">Create Author</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td><a class="btn btn-sm btn-secondary" asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
