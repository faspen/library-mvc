@model IEnumerable<LibraryMVC.Dtos.Books.BookDto>

@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<a href="@Url.Action("Create", "Book")" class="btn btn-primary">Create Book</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Blurb</th>
            <th>Author</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Blurb</td>
                <td>@book.Author.FirstName @book.Author.LastName</td>
                @if (book.Genre != null) 
                {
                    <td>@book.Genre.Name</td>
                }
                else
                {
                    <td>None</td>
                }
                <td class="d-flex flex-row">
                    <a class="btn btn-sm btn-secondary me-1" asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
